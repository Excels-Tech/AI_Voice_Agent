# App Settings
APP_NAME=VoiceAI Backend
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
# Local dev (Postgres):
DATABASE_URL=postgresql://voiceai:password@localhost:5432/voiceai
# Local dev (SQLite quick start):
# DATABASE_URL=sqlite:///./backend/voiceai.db
# Render-hosted Postgres (set via environment, do NOT commit real secrets):
# DATABASE_URL=postgresql://voice_agent_db_user:<PASSWORD>@dpg-d4jj5i2li9vc738gucl0-a/voice_agent_db
# Hostname: dpg-d4jj5i2li9vc738gucl0-a | Port: 5432 | Database: voice_agent_db | Username: voice_agent_db_user

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:5174"]

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id
OPENAI_MODEL=gpt-4o-mini
OPENAI_TTS_VOICE=nova

# Twilio (for telephony)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/api/calls/webhook/twilio

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=voiceai-storage
AWS_REGION=us-east-1

# SendGrid (for emails)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@voiceai.app

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Stripe (for billing)
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Frontend
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_UPLOAD_SIZE=52428800
ALLOWED_UPLOAD_EXTENSIONS=[".pdf",".docx",".txt",".csv"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
